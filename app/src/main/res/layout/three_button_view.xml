<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_three_button_image"
        android:layout_height="@dimen/button_size"
        android:layout_width="@dimen/button_size"
        android:src="@drawable/ic_elder" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/hint"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <EditText
            android:id="@+id/view_three_button_edit_text"
            android:inputType="number|textCapSentences|textMultiLine"
            android:layout_height="50dp"
            android:layout_width="240dp"
            android:maxLength="500"
            android:maxLines="5"
            android:minLines="1" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ic_play_arrow"
            android:id="@+id/view_three_button_play_prompt"
            android:layout_height="@dimen/button_size"
            android:layout_width="@dimen/button_size" />

        <Button
            android:background="@drawable/ic_mic"
            android:id="@+id/view_three_button_add_response"
            android:layout_height="@dimen/button_size"
            android:layout_width="@dimen/button_size" />

        <Button
            android:background="@drawable/ic_volume_up"
            android:id="@+id/view_three_button_play_response"
            android:layout_height="@dimen/button_size"
            android:layout_width="@dimen/button_size" />
    </LinearLayout>
</LinearLayout>