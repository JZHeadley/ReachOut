<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_proposal_creation"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jzheadley.reachout.ui.ProposalCreationActivity">


    <ImageView
        android:id="@+id/add_photo"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:onClick="onImageClick"
        android:src="@drawable/image_placeholder" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_loan_amount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_repayment_amount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_loan_length"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_money_making"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_loan_purchase"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <com.jzheadley.reachout.views.ThreeButtonView
        android:id="@+id/three_button_how_money_help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:id="@+id/btn_proposal_submit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="onClick"
        android:text="Submit" />

</LinearLayout>
